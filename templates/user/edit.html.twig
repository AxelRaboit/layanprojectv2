{% extends 'base.html.twig' %}

{% block title %}Modification utilisateur{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('adminUserModify') }}
{% endblock %}

{% block body %}
    <div class="container-society-modify">
        <div class="container-header">
            <h1>Modifier l'utilisateur {{ user.email }}</h1>
        </div>
        <div class="container-body">
            <a class="regular-button blue-button" href="{{ path('user_update_password', {id: user.id}) }}">Changer le mot de passe</a>
            <a class="regular-button blue-button" href="{{ path('user_update_email', {id: user.id}) }}">Changer l'email</a>
            <a class="regular-button blue-button" href="{{ path('user_update_society', {id: user.id}) }}">Changer la société</a>
            {{ include('user/_delete_form.html.twig') }}
            <a class="regular-button blue-button" href="{{ path('admin_user_index') }}">Retour</a>
            </div>
        </div>
    {{ encore_entry_script_tags('adminUserModify') }}
{% endblock %}
