{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.email }}{% endblock %}

{% block body %}
    <h1>Utilisateur {{ user.email }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles|length == 2 ? 'Admin' : 'User' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="" href="{{ app.request.headers.get('referer') }}">Retour</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
