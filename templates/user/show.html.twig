{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.email }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('adminUserShow') }}
{% endblock %}

{% block body %}
    <div class="container-admin-user-show">
        <div class="container-header">
            <h1>Utilisateur {{ user.email }}</h1>
        </div>

    <div class="container-body">
        <div class="container-table">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles|length == 2 ? 'Admin' : 'User' }}</td>
                    </tr>
                </tbody>
            </table>
            <a class="regular-button blue-button" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
            {{ include('user/_delete_form.html.twig') }}
            <a class="regular-button blue-button" href="{{ app.request.headers.get('referer') }}">Retour</a>
        </div>
    </div>

    </div>
    {{ encore_entry_script_tags('adminUserShow') }}
{% endblock %}
