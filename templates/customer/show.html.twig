{% extends 'base.html.twig' %}

{% block title %}Customer {{ customer.firstname }} {{ customer.lastname }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('customerShow') }}
{% endblock %}

{% block body %}
    <div class="container-customer-show">
        <div class="container-header">
            <h1>Customer {{ customer.firstname }} {{ customer.lastname }}</h1>
        </div>
        <div class="container-body">
            <div class="container-table">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ customer.id }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ customer.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ customer.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ customer.email }}</td>
                        </tr>
                        <tr>
                            <th>Date du dernier Email</th>
                            <td>{{ customer.lastEmailDate|date('d/m/Y') }}</td>
                        </tr>
                        <tr>
                            <th>A répondu</th>
                            <td>{{ customer.hasAnswered ? 'Oui' : 'Non' }}</td>
                        </tr>
                        <tr>
                            <th>A consommé</th>
                            <td>{{ customer.hasConsumed ? 'Oui' : 'Non' }}</td>
                        </tr>
                        <tr>
                            <th>Date création</th>
                            <td>{{ customer.createdAt ? customer.createdAt|date('d/m/Y à H:i') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <a class="regular-button blue-button" href="{{ path('customer_edit', {'id': customer.id}) }}">Modifier</a>
                {{ include('customer/_delete_form.html.twig') }}
                <a class="regular-button blue-button" class="" href="{{ path('customer_index')}}">Retour</a>
            </div>
        </div>
    </div>
    {{ encore_entry_script_tags('customerShow') }}
{% endblock %}
