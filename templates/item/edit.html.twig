{% extends 'base.html.twig' %}

{% block title %}Modification produit {{ item.name }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('itemModify') }}
{% endblock %}

{% block body %}
    <div class="container-society-modify">
        <div class="container-header">
            <h1>Modification du produit {{ item.name }}</h1>
        </div>
        <div class="container-body">
            {{ include('item/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            {{ include('item/_delete_form.html.twig') }}
            <a class="regular-button blue-button" href="{{ path('item_index') }}">Retour à la liste</a>
        </div>
    </div>
    {{ encore_entry_script_tags('itemModify') }}
{% endblock %}
