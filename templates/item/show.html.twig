{% extends 'base.html.twig' %}

{% block title %}Produit {{ item.name }} - CRM3000{% endblock %}

{% block body %}
    <h1>Produit {{ item.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ item.price }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ item.quantity }}</td>
            </tr>
            <tr>
                <th>Chiffre d'affaire</th>
                <td>{{ item.salesTurnover }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('item_index') }}">Retour à la liste</a>

    <a href="{{ path('item_edit', {'id': item.id}) }}">Modifier</a>

    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
