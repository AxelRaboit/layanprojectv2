{% extends 'base.html.twig' %}

{% block title %}Société {{ society.name }} - CRM3000{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('societyShow') }}
{% endblock %}

{% block body %}
<div class="container-society-show">
    <div class="container-header">
        <h1>Société {{ society.name }}</h1>
    </div>

    <div class="container-bill-download">
        <a class="regular-button blue-button" href="{{ path('bill_data_download', {'id': society.id})}}">Générer une facture des ventes</a>
    </div>
    <div class="container-body-horizontal">
        <div class="container-table">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ society.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ society.name }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ society.address }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ society.city }}</td>
                    </tr>
                    <tr>
                        <th>Code Postal</th>
                        <td>{{ society.postalCode }}</td>
                    </tr>
                    <tr>
                        <th>Siret</th>
                        <td>{{ society.siret }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="regular-button blue-button" href="{{ path('society_edit', {'id': society.id}) }}">Modifier</a>
            {{ include('society/_delete_form.html.twig') }}
            <a class="regular-button blue-button" href="{{ path('society_index') }}">Retour à la liste</a>    
        </div>

        <div class="container-list">
            <h3>Gérant de la société</h3>
            {% if society.manager %}
                <p>{{ society.manager.email }}</p>
            {% else %}
                <p>Aucun gérant</p>    
            {% endif %}
        </div>

        <div class="container-list">
            <h3>Liste des collaborateurs</h3>
            <ul>
            {% for collaborator in collaborators %}
                <li>{{ collaborator.email }}</li>
            {% else %}
                <li>Aucun collaborateur</li>
            {% endfor %}
            </ul>
        </div>
    </div>
</div>
    {{ encore_entry_script_tags('societyShow') }}
{% endblock %}
